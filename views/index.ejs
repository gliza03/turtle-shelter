    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
			<br><br>
            <h1>Join the<br>Turtle Shelter</br>Project today!</h1>
			<div style="background-color: var(--primary); margin-top: 8px; width: 100px; height: 8px; margin-bottom: 10px; transform: scale(1, 1); visibility: visible;" data-width="10px" data-animate="yes" data-animation-delay="" data-color="accent-color" class="divider-small-border completed"></div>
            <p>Join our mission to protect vulnerable individuals from deadly winter conditions by providing life-saving vests to our unsheltered neighbors.</p>
            <div class="hero-buttons">
                <a href="/eventrequest" class=" hero-buttons button button-primary">Request an Event</a>
