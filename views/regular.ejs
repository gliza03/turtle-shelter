<!-- admin-regular.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Portal - Turtle Shelter Project</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="admin-portal">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h2>Admin Portal</h2>
            </div>
            <ul class="nav-list">
                <li data-section="dashboard" class="nav-item active"><i class="fas fa-home"></i> Dashboard</li>
                <li data-section="reports" class="nav-item"><i class="fas fa-chart-bar"></i> Reports</li>
            </ul>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Header -->
            <header class="admin-header">
                <h1>Welcome, Admin</h1>
                <button class="button button-outline">Logout</button>
            </header>

            <!-- Dashboard Section -->
            <section id="dashboard" class="content-section active">
                <h2>Dashboard</h2>
                <div class="dashboard-grid">
                    <div class="dashboard-card">
                        <h3>Total Events</h3>
                        <p>15</p>
                    </div>
                    <div class="dashboard-card">
                        <h3>Total Volunteers</h3>
                        <p>120</p>
                    </div>
                    <div class="dashboard-card">
                        <h3>Active Projects</h3>
                        <p>5</p>
                    </div>
                </div>
            </section>

            <!-- Reports Section -->
            <section id="reports" class="content-section">
                <h2>Reports</h2>
                <div class="report-overview">
                    <!-- Keep existing report content -->
                    <div class="report-card">
                        <h3>Total Events</h3>
                        <p>15</p>
                    </div>
                    <div class="report-card">
                        <h3>Total Volunteers</h3>
                        <p>120</p>
                    </div>
                    <div class="report-card">
                        <h3>Volunteer Hours</h3>
                        <p>450</p>
                    </div>
                    <div class="report-card">
                        <h3>Total Donations</h3>
                        <p>$12,340</p>
                    </div>
                </div>
                
                <!-- View-only table for regular admin -->
                <div class="table-container">
                    <h3>Event Reports</h3>
                    <table class="report-table">
                        <thead>
                            <tr>
                                <th>Event Name</th>
                                <th>Date</th>
                                <th>Volunteers</th>
                                <th>Hours</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Community Sewing Day</td>
                                <td>2024-01-15</td>
                                <td>30</td>
                                <td>120</td>
                                <td>Completed</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </section>
        </main>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const navItems = document.querySelectorAll('.nav-item');
            const sections = document.querySelectorAll('.content-section');
    
            navItems.forEach(item => {
                item.addEventListener('click', () => {
                    // Remove 'active' class from previously active nav item and section
                    document.querySelector('.nav-item.active').classList.remove('active');
                    document.querySelector('.content-section.active').classList.remove('active');
    
                    // Add 'active' class to the clicked nav item
                    item.classList.add('active');
    
                    // Find the corresponding section by its ID and activate it
                    const sectionId = item.dataset.section;
                    document.getElementById(sectionId).classList.add('active');
                });
            });
        });
    </script>
</body>
</html>