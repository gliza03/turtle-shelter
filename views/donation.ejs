<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Donate - Turtle Shelter Project</title>
    <meta name="description" content="Support the Turtle Shelter Project by making a donation to help vulnerable individuals in need.">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://js.stripe.com/v3/"></script>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="container header-container">
            <a href="/" class="logo">
                <span>Turtle Shelter Project</span>
            </a>
            <nav class="nav">
                <a href="/" class="nav-link">Home</a>
                <a href="/involved" class="nav-link">Get Involved</a>
                <a href="/about" class="nav-link">About Us</a>
                <a href="/impact" class="nav-link">Impact</a>
                <a href="/jen" class="nav-link">Jen's Story</a>
                <a href="/login" class="nav-link button button-primary">Admin Portal</a>
            </nav>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <h1>Make a Difference</h1>
            <div style="background-color:#2c4faf; margin-top: 8px; width: 100px; height: 8px; margin-bottom: 10px;" class="divider-small-border"></div>
            <p>Your generosity helps us create life-saving resources for those in need.</p>
        </div>
    </section>

    <!-- Donation Section -->
    <section class="donation-section">
        <div class="container">
            <h2>Donate Today</h2>
            <p>Select an amount and complete the form below to support our mission.</p>
            
            <form id="donation-form" class="donation-form">
                <div class="form-group">
                    <label for="donation-amount">Donation Amount ($)</label>
                    <select id="donation-amount" name="amount" required>
                        <option value="1000">10</option>
                        <option value="2500">25</option>
                        <option value="5000" selected>50</option>
                        <option value="10000">100</option>
                    </select>
                </div>

                <div id="card-element" class="form-group">
                    <!-- Stripe will mount the card input here -->
                </div>

                <div id="payment-result" class="form-group">
                    <!-- Display payment errors or success messages here -->
                </div>

                <button type="submit" class="button button-primary">Donate</button>
            </form>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-grid">
                <div class="footer-section">
                    <h4>Quick Links</h4>
                    <ul class="footer-links">
                        <li><a href="/about">About Us</a></li>
                        <li><a href="/events">Events</a></li>
                        <li><a href="/volunteer">Volunteer</a></li>
                        <li><a href="/contact">Contact</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>Resources</h4>
                    <ul class="footer-links">
                        <li><a href="/faq">FAQ</a></li>
                        <li><a href="/guidelines">Volunteer Guidelines</a></li>
                        <li><a href="/impact">Our Impact</a></li>
                        <li><a href="/news">News</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>Contact Us</h4>
                    <ul class="footer-links">
                        <li><i class="fas fa-envelope"></i> info@turtleshelterproject.org</li>
                        <li><i class="fas fa-phone"></i> (555) 123-4567</li>
                        <li><i class="fas fa-map-marker-alt"></i> Northern Utah</li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <div class="copyright">
        <div class="container">
            <p>&copy; 2024 Turtle Shelter Project. All rights reserved.</p>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', async () => {
            // Initialize Stripe
            const stripe = Stripe('pk_test_51QS7UhDFHD1dbGPS0UaPEomk9EtX3OKiOD3aaeTeCkSItsyDR1XLLLnqzehxtaVbmzsnVS31v3RjaJqgvKXj9TWW00FqQ1Sq2z'); // Replace with your Stripe publishable key
            const elements = stripe.elements();
            const cardElement = elements.create('card');
            cardElement.mount('#card-element');

            // Form submission
            const form = document.querySelector('#donation-form');
            form.addEventListener('submit', async (event) => {
                event.preventDefault();

                // Get selected donation amount
                const amount = document.querySelector('#donation-amount').value;

                // Fetch client secret from the server
                const response = await fetch('/create-payment-intent', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ amount: parseInt(amount, 10), currency: 'usd' }),
                });
                const { clientSecret } = await response.json();

                // Confirm card payment
                const { error, paymentIntent } = await stripe.confirmCardPayment(clientSecret, {
                    payment_method: {
                        card: cardElement,
                    },
                });

                const resultDiv = document.getElementById('payment-result');
                if (error) {
                    resultDiv.textContent = `Error: ${error.message}`;
                    resultDiv.style.color = 'red';
                } else if (paymentIntent.status === 'succeeded') {
                    resultDiv.textContent = 'Thank you for your generous donation!';
                    resultDiv.style.color = 'green';
                }
            });
        });
    </script>
</body>
</html>
