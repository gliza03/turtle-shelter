<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Super Admin Portal - Turtle Shelter Project</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="admin-portal">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h2>Super Admin Portal</h2>
            </div>
            <ul class="nav-list">
                <li data-section="dashboard" class="nav-item active"><i class="fas fa-home"></i> Dashboard</li>
                <li data-section="event-management" class="nav-item"><i class="fas fa-calendar-alt"></i> Event Management</li>
                <li data-section="volunteers" class="nav-item"><i class="fas fa-users"></i> Volunteers</li>
                <li data-section="distribution" class="nav-item"><i class="fas fa-truck"></i> Distribution</li>
                <li data-section="reports" class="nav-item"><i class="fas fa-chart-bar"></i> Reports</li>
                <li data-section="manage-roles" class="nav-item"><i class="fas fa-user-shield"></i> Manage Roles</li>
                <li data-section="settings" class="nav-item"><i class="fas fa-cog"></i> Settings</li>
            </ul>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Header -->
            <header class="admin-header">
                <h1>Welcome, Super Admin</h1>
                <button class="button button-outline">Logout</button>
            </header>

            <!-- Dashboard Section -->
            <section id="dashboard" class="content-section active">
                <h2>Dashboard Overview</h2>
                <div class="dashboard-grid">
                    <div class="dashboard-card">
                        <h3>Pending Event Approvals</h3>
                        <p>15</p>
                        <span class="trend positive">↑ 5% from last month</span>
                    </div>
                    <div class="dashboard-card">
                        <h3>Active Volunteers</h3>
                        <p>120</p>
                        <span class="trend positive">↑ 12% from last month</span>
                    </div>
                    <div class="dashboard-card">
                        <h3>Vests Distributed</h3>
                        <p>450</p>
                        <span class="trend positive">↑ 8% from last month</span>
                    </div>
                    <div class="dashboard-card">
                        <h3>Total Donations</h3>
                        <p>$12,340</p>
                        <span class="trend positive">↑ 15% from last month</span>
                    </div>
                </div>

                <div class="recent-activities">
                    <h3>Recent Activities</h3>
                    <table class="report-table">
                        <thead>
                            <tr>
                                <th>Activity</th>
                                <th>User</th>
                                <th>Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>New Event Request</td>
                                <td>Community Center</td>
                                <td>2024-01-15</td>
                                <td><span class="status pending">Pending</span></td>
                            </tr>
                            <tr>
                                <td>Volunteer Registration</td>
                                <td>John Smith</td>
                                <td>2024-01-14</td>
                                <td><span class="status approved">Approved</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </section>

            <!-- Event Management Section -->
            <section id="event-management" class="content-section">
                <h2>Event Management</h2>
                
                <!-- Calendly Integration -->
                <div class="calendly-inline-widget" data-url="https://calendly.com/intexgroup414/jacket-volunteering-event" style="min-width:320px;height:700px;"></div>
                <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
                
                <!-- Google Calendar Integration -->
                <div class="iframe-container">
                    <iframe src="https://calendar.google.com/calendar/embed?src=intexgroup414%40gmail.com&ctz=America%2FFort_Nelson" 
                            style="border: 0" width="800" height="600" frameborder="0" scrolling="no"></iframe>
                </div>

                <!-- Event Requests Table -->
                <div class="table-container">
                    <h3>Event Requests</h3>
                    <table class="report-table">
                        <thead>
                            <tr>
                                <th>Organization</th>
                                <th>Date</th>
                                <th>Location</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Community Center</td>
                                <td>2024-02-15</td>
                                <td>Salt Lake City</td>
                                <td><span class="status pending">Pending</span></td>
                                <td>
                                    <button class="button">Review</button>
                                    <button class="button button-outline">Delete</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </section>

            <!-- Volunteer Management Section -->
            <section id="volunteers" class="content-section">
                <h2>Volunteer Management</h2>
                
                <div class="volunteer-stats">
                    <div class="dashboard-card">
                        <h3>Active Volunteers</h3>
                        <p>120</p>
                    </div>
                    <div class="dashboard-card">
                        <h3>Pending Applications</h3>
                        <p>15</p>
                    </div>
                    <div class="dashboard-card">
                        <h3>Total Hours This Month</h3>
                        <p>450</p>
                    </div>
                </div>

                <div class="table-container">
                    <h3>Volunteer Directory</h3>
                    <table class="report-table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Skills</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>John Smith</td>
                                <td>john@example.com</td>
                                <td>(555) 123-4567</td>
                                <td>Sewing</td>
                                <td><span class="status active">Active</span></td>
                                <td>
                                    <button class="button">Edit</button>
                                    <button class="button button-outline">Deactivate</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </section>

            <!-- Distribution Section -->
            <section id="distribution" class="content-section">
                <h2>Distribution Management</h2>
                
                <div class="distribution-stats">
                    <div class="dashboard-card">
                        <h3>Available Inventory</h3>
                        <p>250</p>
                    </div>
                    <div class="dashboard-card">
                        <h3>Pending Distribution</h3>
                        <p>45</p>
                    </div>
                    <div class="dashboard-card">
                        <h3>Distributed This Month</h3>
                        <p>175</p>
                    </div>
                </div>

                <div class="table-container">
                    <h3>Distribution Records</h3>
                    <table class="report-table">
                        <thead>
                            <tr>
                                <th>Location</th>
                                <th>Date</th>
                                <th>Quantity</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Downtown Shelter</td>
                                <td>2024-01-15</td>
                                <td>25</td>
                                <td><span class="status completed">Completed</span></td>
                                <td>
                                    <button class="button">View Details</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </section>

            <!-- Reports Section -->
            <section id="reports" class="content-section">
                <h2>Reports</h2>
                
                <div class="report-overview">
                    <div class="report-card">
                        <h3>Total Events</h3>
                        <p>15</p>
                    </div>
                    <div class="report-card">
                        <h3>Total Volunteers</h3>
                        <p>120</p>
                    </div>
                    <div class="report-card">
                        <h3>Volunteer Hours</h3>
                        <p>450</p>
                    </div>
                    <div class="report-card">
                        <h3>Total Donations</h3>
                        <p>$12,340</p>
                    </div>
                </div>
            
                <div class="charts-container">
                    <canvas id="volunteerChart"></canvas>
                    <canvas id="donationChart"></canvas>
                </div>
            
                <div class="table-container">
                    <h3>Detailed Reports</h3>
                    <table class="report-table">
                        <thead>
                            <tr>
                                <th>Event Name</th>
                                <th>Date</th>
                                <th>Volunteers</th>
                                <th>Hours</th>
                                <th>Donations</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Community Sewing Day</td>
                                <td>2024-01-15</td>
                                <td>30</td>
                                <td>120</td>
                                <td>$500</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            
                <div class="export-buttons">
                    <button class="button">Download CSV</button>
                    <button class="button button-outline">Download PDF</button>
                </div>
            </section>

            <!-- Manage Roles Section -->
            <section id="manage-roles" class="content-section">
                <h2>User Role Management</h2>
                
                <div class="role-stats">
                    <div class="dashboard-card">
                        <h3>Total Users</h3>
                        <p>25</p>
                    </div>
                    <div class="dashboard-card">
                        <h3>Active Admins</h3>
                        <p>5</p>
                    </div>
                    <div class="dashboard-card">
                        <h3>Pending Approvals</h3>
                        <p>3</p>
                    </div>
                </div>

                <div class="table-container">
                    <h3>User Management</h3>
                    <table class="report-table">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Last Login</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>admin_user</td>
                                <td>admin@example.com</td>
                                <td>Admin</td>
                                <td>2024-01-15</td>
                                <td><span class="status active">Active</span></td>
                                <td>
                                    <button class="button">Edit Role</button>
                                    <button class="button button-outline">Deactivate</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </section>

            <!-- Settings Section -->
            <section id="settings" class="content-section">
                <h2>Settings</h2>
                
                <div class="settings-container">
                    <div class="settings-card">
                        <h3>General Settings</h3>
                        <form class="settings-form">
                            <div class="form-group">
                                <label>Site Name</label>
                                <input type="text" value="Turtle Shelter Project">
                            </div>
                            <div class="form-group">
                                <label>Contact Email</label>
                                <input type="email" value="admin@turtleshelterproject.org">
                            </div>
                            <button class="button">Save Changes</button>
                        </form>
                    </div>

                    <div class="settings-card">
                        <h3>Security Settings</h3>
                        <form class="settings-form">
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" placeholder="Enter new password">
                            </div>
                            <div class="form-group">
                                <label>Confirm Password</label>
                                <input type="password" placeholder="Confirm new password">
                            </div>
                            <button class="button">Update Password</button>
                        </form>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const navItems = document.querySelectorAll('.nav-item');
            const sections = document.querySelectorAll('.content-section');
    
            navItems.forEach(item => {
                item.addEventListener('click', () => {
                    // Remove 'active' class from previously active nav item and section
                    document.querySelector('.nav-item.active').classList.remove('active');
                    document.querySelector('.content-section.active').classList.remove('active');
    
                    // Add 'active' class to the clicked nav item
                    item.classList.add('active');
    
                    // Find the corresponding section by its ID and activate it
                    const sectionId = item.dataset.section;
                    document.getElementById(sectionId).classList.add('active');
                });
            });
        });
    </script>
</body>
</html>